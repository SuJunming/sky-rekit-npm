.login_page {
    background: #f9f9f9;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    &_content {
      width: 1088px;
      display: flex;
      flex-direction: row;
      background: #ffffff;
      box-shadow: 0px 4px 40px 0px rgba(0, 0, 0, 0.06);
      height: 600px;
      &_left {
        position: relative;
      }
      &_right {
        width: 488px;
        padding: 60px;
        h2 {
          width: 100%;
          text-align: center;
          margin-bottom: 90px;
          font-size: 32px;
          font-weight: 600;
          color: #333333;
          text-shadow: 0px 4px 40px rgba(0, 0, 0, 0.06);
        }
        > span {
          display: block;
          width: 100%;
          text-align: center;
          font-size: 14px;
          font-weight: 400;
          color: rgba(0, 0, 0, 0.45);
          text-shadow: 0px 4px 40px rgba(0, 0, 0, 0.06);
        }
      }
    }
  }
  